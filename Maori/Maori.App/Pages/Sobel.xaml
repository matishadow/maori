<UserControl x:Class="Maori.App.Pages.Sobel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mui="http://firstfloorsoftware.com/ModernUI"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Style="{StaticResource ContentRoot}">
        <ScrollViewer>
            <StackPanel MinWidth="200">
                <Image Stretch="Uniform" Name="SobelImage"></Image>
                <Button Height="36" HorizontalAlignment="Left" 
                        Margin="0,0,0,34" Name="EdgeDetectButton" VerticalAlignment="Bottom" 
                        Width="141" Grid.Column="1" Click="EdgeDetectButton_OnClick">Wykryj krawędzie</Button>
                <Button Height="36" HorizontalAlignment="Left" 
                        Margin="0,-20,0,34" Name="ResetButton" VerticalAlignment="Bottom" 
                        Width="141" Grid.Column="1" Click="ResetButton_OnClick">Reset</Button>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
