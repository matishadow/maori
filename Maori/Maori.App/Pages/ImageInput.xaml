<UserControl x:Class="Maori.App.Pages.ImageInput"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mui="http://firstfloorsoftware.com/ModernUI"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="375.608">
    <Grid Style="{StaticResource ContentRoot}">
        <ScrollViewer>
            <StackPanel MinWidth="200">
                <TextBlock Text="Wprowadzony obrazek:" Style="{StaticResource Heading2}" />
                <Image Stretch="Uniform" Name="InputImage"></Image>
                <Button Height="36" HorizontalAlignment="Left" 
                        Margin="0,0,0,34" Name="BtnLoad" VerticalAlignment="Bottom" 
                        Width="141" Grid.Column="1" Click="btnLoad_Click">Załaduj obrazek</Button>
                <Button Height="36" HorizontalAlignment="Left" 
                        Margin="0,0,0,0" x:Name="BtnClear" 
                        Width="141" Click="btnClear_Click" Content="Wyczyść"/>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
